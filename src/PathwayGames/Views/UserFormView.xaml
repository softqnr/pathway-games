<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PathwayGames.Views.UserFormView"
             Title="Add user">
    
    <StackLayout Padding="10" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
        <Label Text="Username:" />
        <Entry Text="{Binding UserName, Mode=TwoWay}" HorizontalOptions="FillAndExpand" />
        <Label Text="User type:" />
        <Picker SelectedItem="{Binding UserType, Mode=TwoWay}" HorizontalOptions="FillAndExpand">
            <Picker.Items>
                <x:String>Admin</x:String>
                <x:String>Learner</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Save" Command="{Binding SaveUserCommand}" HorizontalOptions="FillAndExpand"/>
        <Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand" />
    </StackLayout>
</ContentPage>
